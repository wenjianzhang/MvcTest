@using MvcTest.Extensions;
@using MvcTest.Models;
@{
    MvcTest.Models.Manager Manager = new Manager();
    try
    {
        Manager = Extension.GetUser(this.User);
        if (Manager == null)
        {
            Response.Redirect("/Login/Index");
        }
    }
    catch (Exception ex)
    {
        Response.Redirect("/Login/Index");
    }
}

