@section FootBottom{
    <script>
        function ClearCache() {

            $.ajax({
                type: "post", url: "/Login/ClearCache", dataType: "text", success: function (data) {
                    if (data.toString() == "OK") {
                        layer.load("缓存已清除，正在刷新", 0);
                        location.reload();
                    }
                    else {
                        layer.msg('缓存清除失败，请联系管理员', 2);
                    }
                }
            });
        }
    </script>

}
