
@model MvcTest.Models.MenuInfo

@{
    ViewBag.Title = "Delete";
}

@section HeadContent{
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/css/colorpicker.css" />
    <link rel="stylesheet" href="~/Content/css/datepicker.css" />
    <link rel="stylesheet" href="~/Content/css/uniform.css" />
    <link rel="stylesheet" href="~/Content/css/select2.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-style.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-media.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-wysihtml5.css" />
    <link href="~/fonts/css/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">菜单表</a> <a href="#" class="current">删除</a> </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>菜单表</h5>
                    </div>
                    <div class="widget-content nopadding">
                     					                     @using (Html.BeginForm("Delete", "MenuInfo", new { id = Model.MIID }, FormMethod.Post, new { @class = "form-horizontal" }))
                                         					                     					                     					                     					                     					                     					                     					                                         
                        {
                    
                            @Html.AntiForgeryToken()
                           									                            														         <div class="control-group">
                                @Html.LabelFor(model => model.Name, "菜单名称或各个页面功能名称", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "span8", placeholder = "菜单名称或各个页面功能名称" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
								                            														         <div class="control-group">
                                @Html.LabelFor(model => model.Url, "各页面URL（主菜单与分类菜单没有URL）", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Url, new { @class = "span8", placeholder = "各页面URL（主菜单与分类菜单没有URL）" })
                                    @Html.ValidationMessageFor(model => model.Url)
                                </div>
                            </div>
								                            														         <div class="control-group">
                                @Html.LabelFor(model => model.ParentId, "父ID", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.ParentId, new { @class = "span8", placeholder = "父ID" })
                                    @Html.ValidationMessageFor(model => model.ParentId)
                                </div>
                            </div>
								                            														         <div class="control-group">
                                @Html.LabelFor(model => model.Sort, "排序", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Sort, new { @class = "span8", placeholder = "排序" })
                                    @Html.ValidationMessageFor(model => model.Sort)
                                </div>
                            </div>
								                            														         <div class="control-group">
                                @Html.LabelFor(model => model.Depth, "深度", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Depth, new { @class = "span8", placeholder = "深度" })
                                    @Html.ValidationMessageFor(model => model.Depth)
                                </div>
                            </div>
								                            														         <div class="control-group">
                                @Html.LabelFor(model => model.IsDisplay, "该菜单是否在菜单栏显示", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.IsDisplay, new { @class = "span8", placeholder = "该菜单是否在菜单栏显示" })
                                    @Html.ValidationMessageFor(model => model.IsDisplay)
                                </div>
                            </div>
								                            														         <div class="control-group">
                                @Html.LabelFor(model => model.IsMenu, "是否是菜单还是页面", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.IsMenu, new { @class = "span8", placeholder = "是否是菜单还是页面" })
                                    @Html.ValidationMessageFor(model => model.IsMenu)
                                </div>
                            </div>
								                                                        <div class="form-actions no-color">
                                <input type="submit" value="删除" class="btn btn-default" /> |
                                @Html.ActionLink("返回", "Index", "WebConfig", new { @class = "btn btn-success" })
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FootContent{
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/matrix.js"></script>
    <script src="~/Scripts/js/jquery.ui.custom.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/js/masked.js"></script>
    <script src="~/Scripts/js/jquery.uniform.js"></script>
    <script src="~/Scripts/js/select2.min.js"></script>

    @*<script src="~/Scripts/js/matrix.form_common.js"></script>*@
    <script src="~/Scripts/js/wysihtml5-0.3.0.js"></script>
    <script src="~/Scripts/js/jquery.peity.min.js"></script>
    <script src="~/Scripts/js/bootstrap-wysihtml5.js"></script>
    <script>
        $('.textarea_editor').wysihtml5();
    </script>
}