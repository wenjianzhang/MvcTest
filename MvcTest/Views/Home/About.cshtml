                <div id="today" class="content">
                    <ul>
                        @foreach (var course in allCourses.Where(r => r.StartTime.ToString("yyyyMMdd") == now.ToString("yyyyMMdd")).OrderBy(r => r.StartTime).Take(10))
                        {
                            <li>
                                <span class="f-r" title="@course.CourseTitle"><a href="@course.LinkUrl">@course.CourseTitle</a></span><span class="f-l @((course.StartTime<=now && course.EndTime>now)?"live":"")">
