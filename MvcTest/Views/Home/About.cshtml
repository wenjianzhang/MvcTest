@using System.Linq;
@using System.Collections.Generic;
@using Com.Fuwu.Common.DataModel.PortalWeb;
@{
    IEnumerable<TLiveCourse> allCourses;
    var now = DateTime.Now;
    using (var db = new Com.Fuwu.Common.DataModel.PortalWeb.PortalWebEntities())
    {
        allCourses = db.TLiveCourses.Where(c => c.PublishTime <= now && c.ExpireTime >= now).ToList();
    }
}

