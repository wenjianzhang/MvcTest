@model MvcTest.Models.WebConfig

@{
    ViewBag.Title = "Delete";
}

@section HeadContent{
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/css/colorpicker.css" />
    <link rel="stylesheet" href="~/Content/css/datepicker.css" />
    <link rel="stylesheet" href="~/Content/css/uniform.css" />
    <link rel="stylesheet" href="~/Content/css/select2.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-style.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-media.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-wysihtml5.css" />
    <link href="~/fonts/css/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">网站配置信息</a> <a href="#" class="current">删除</a> </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>网站配置信息</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @using (Html.BeginForm("Delete", "WebConfig", new { id = Model.WCID }, FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="control-group">
                                @Html.LabelFor(model => model.WebName, "网站名称", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.WebName, new { @class = "span11", placeholder = "网站名称" })
                                    @Html.ValidationMessageFor(model => model.WebName)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.WebDomain, "网站地址", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.WebDomain, new { @class = "span11", placeholder = "网站地址" })
                                    @Html.ValidationMessageFor(model => model.WebDomain)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.WebEmail, "管理员邮箱", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.WebEmail, new { @class = "span11", placeholder = "管理员邮箱" })
                                    @Html.ValidationMessageFor(model => model.WebEmail)
                                </div>
                            </div>


                            <div class="control-group">
                                @Html.LabelFor(model => model.EmailSmtp, "SMTP服务器", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.EmailSmtp, new { @class = "span11", placeholder = "SMTP服务器" })
                                    @Html.ValidationMessageFor(model => model.EmailSmtp)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.EmailUserName, "登录用户名", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.EmailUserName, new { @class = "span11", placeholder = "登录用户名" })
                                    @Html.ValidationMessageFor(model => model.EmailUserName)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.EmailPassWord, "登录密码", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.EmailPassWord, new { @class = "span11", placeholder = "登录密码" })
                                    @Html.ValidationMessageFor(model => model.EmailPassWord)
                                </div>
                            </div>

                            <div class="control-group">
                                @Html.LabelFor(model => model.EmailDomain, "邮件域名", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.EmailDomain, new { @class = "span11", placeholder = "邮件域名" })
                                    @Html.ValidationMessageFor(model => model.EmailDomain)
                                </div>
                            </div>
                            <div class="form-actions no-color">
                                <input type="submit" value="删除" class="btn btn-default" /> |
                                @Html.ActionLink("返回", "Index", "WebConfig", new { @class = "btn btn-success" })
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FootContent{
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/matrix.js"></script>
    <script src="~/Scripts/js/jquery.ui.custom.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/js/masked.js"></script>
    <script src="~/Scripts/js/jquery.uniform.js"></script>
    <script src="~/Scripts/js/select2.min.js"></script>

    @*<script src="~/Scripts/js/matrix.form_common.js"></script>*@
    <script src="~/Scripts/js/wysihtml5-0.3.0.js"></script>
    <script src="~/Scripts/js/jquery.peity.min.js"></script>
    <script src="~/Scripts/js/bootstrap-wysihtml5.js"></script>
    <script>
        $('.textarea_editor').wysihtml5();
    </script>
}