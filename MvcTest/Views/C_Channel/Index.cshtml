@section FootBottom{
    <script>
        function myconfirm(id) {
            if (id == "" || id == undefined) {
                layer.msg('参数错误', 1, 1);
                return;
            }

            layer.confirm('确认删除？', function (index) {
                layer.load("正在删除", 0);
                Del(id);
            });
        }
        function Del(id) {
            if (id == "" || id == undefined) {

                return;
            }
            $.ajax({
                type: "post", url: "/C_Channel/DeleteConfirmedCom", dataType: "text", data: { id: id}, success: function (data) {
                    if (data.toString() == "OK") {
                        layer.load("删除成功，正在跳转", 0);
                        location.reload();
                    }
                    else if (data.toString() == "NO") {
                        layer.msg('删除失败，请联系管理员', 2);
                    }
                }
            });
        }
    </script>
}