<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="/Home" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">C_Channel</a> </div>
    </div>
    <div class="container-fluid">
        <div class="widget-box">
            <div class="widget-content">
                @if (EName.Contains("Create"))
                {
                    @Html.ActionLink("新建", "Create", new { }, new { @class = "btn btn-primary", @onclick = "OnloadMessage2()" })
                }
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>C_Channel</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped with-check">
                            <thead>
                                <tr>



                                    <th><input type="checkbox" id="title-checkbox" name="title-checkbox" /></th>

                                    <th>
                                        频道名称
                                    </th>

                                    <th>
                                        频道英文
                                    </th>

                                    <th>
                                        父频道
                                    </th>

                                    <th>
                                        排序
                                    </th>

                                    <th>
                                        操作
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">

                                        <td>
                                            @Html.CheckBox(item.ChannelID.ToString())
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChannelName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChannelEName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PCID)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sorc)
                                        </td>

                                        <td>
                                            @if (EName.Contains("Edit"))
                                            {
                                                @Html.ActionLink("修改", "Edit", new { id = item.ChannelID }, new { @class = "btn btn-primary btn-mini", @onclick = "OnloadMessage2()" })
                                            }

                                            @if (EName.Contains("Details"))
                                            {
                                                @Html.ActionLink("详情", "Details", new { id = item.ChannelID }, new { @class = "btn btn-info btn-mini", @onclick = "OnloadMessage2()" })
                                            }

                                            @if (EName.Contains("Delete"))
                                            {
                                                @*@Html.ActionLink("删除", "Delete", new { id = item.ChannelID }, new { @class = "btn btn-danger btn-mini", @onclick = "OnloadMessage2()" })*@
                                                <a class="btn btn-danger btn-mini" href="javascript:void(0);" onclick="myconfirm(@item.ChannelID)">删除</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <div style=" text-align:center;">
                    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { pageindex = page }))
                </div>

            </div>
        </div>
    </div>
</div>

@section FootContent{
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/jquery.ui.custom.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
