@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>修改密码</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-style.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-media.css" />
    <link href="~/fonts/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/matrix-login.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
</head>
<body>

    <div style=" width:100%;">
        <div class="container" style=" margin:0 auto;">
            <div class="row">
                <div class="span3">
                </div>
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-pencil"></i> </span>
                            <h5>修改密码</h5>
                        </div>
                        <div class="widget-content nopadding">
                            @using (Ajax.BeginForm("Edit", "ResetPassword", new { id = ViewBag.id, email=ViewBag.email }, new AjaxOptions { OnSuccess = "alert('提交成功!')" }, new { @id = "form-wizards", @class = "form-horizontal", @name = "password_validate" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="control-group">
                                    <label class="control-label">输入新密码</label>
                                    <div class="controls">
                                        <input id="password" type="password" name="password" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">确认新密码</label>
                                    <div class="controls">
                                        <input id="password2" type="password" name="password2" />
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <span class="pull-right"><input id="submitted" type="submit" class="btn btn-success" value="Login" /> </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="span3">
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/jquery.ui.custom.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery.validate.js"></script>
    <script src="~/Scripts/js/jquery.wizard.js"></script>
    <script src="~/Scripts/js/matrix.js"></script>
    @*<script src="~/Scripts/js/restpassword.js"></script>*@
</body>
</html>
