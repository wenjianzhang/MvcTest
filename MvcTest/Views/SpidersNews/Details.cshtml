@model DataModel.NewsTab
@using DataModel;
@{
    ViewBag.Title = "Details";
}

@section HeadContent{
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/css/colorpicker.css" />
    <link rel="stylesheet" href="~/Content/css/datepicker.css" />
    <link rel="stylesheet" href="~/Content/css/uniform.css" />
    <link rel="stylesheet" href="~/Content/css/select2.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-style.css" />
    <link rel="stylesheet" href="~/Content/css/matrix-media.css" />
    <link rel="stylesheet" href="~/Content/css/bootstrap-wysihtml5.css" />
    <link href="~/Scripts/ueditor/themes/default/css/ueditor.min.css" rel="stylesheet" />
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">NewsTab</a> <a href="#" class="current">详情</a> </div>
        @*<h1>Common Form Elements</h1>*@
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>NewsTab</h5>
                    </div>
                    <div class="widget-content nopadding">


                        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal" }))
                        {

                            @Html.AntiForgeryToken()
                            <div class="control-group">
                                @Html.LabelFor(model => model.SourceSiteTag, "源标识", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.SourceSiteTag, new { @class = "span8", placeholder = "SourceSiteTag", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.SourceSiteTag)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.SourceSiteName, "源名称", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.SourceSiteName, new { @class = "span8", placeholder = "SourceSiteName", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.SourceSiteName)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.Title, "标题", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Title, new { @class = "span8", placeholder = "Title", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.Title)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.TypeName, "分类", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.TypeName, new { @class = "span8", placeholder = "TypeName", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.TypeName)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.NewPublishTime, "发布时间", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.NewPublishTime, new { @class = "span8", placeholder = "NewPublishTime", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.NewPublishTime)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.BaseUrl, "源根地址", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.BaseUrl, new { @class = "span8", placeholder = "BaseUrl", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.BaseUrl)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.Url, "目标地址", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Url, new { @class = "span8", placeholder = "Url", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.Url)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.ImgUrl, "插图地址", new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.ImgUrl, new { @class = "span8", placeholder = "ImgUrl", @disabled = "" })
                                    @Html.ValidationMessageFor(model => model.ImgUrl)
                                </div>
                            </div>
                            <div class="control-group">
                                @Html.LabelFor(model => model.Content, "内容", new { @class = "control-label" })
                                <div class="controls">
                                    <script type="text/plain" id="myEditor" style="width:95%;height:240px;">
                                        <p>@MvcHtmlString.Create(Model.Content)</p>
                                    </script>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        }
                        <div class="form-actions">

                            @Html.ActionLink("返回", "Index", "WebConfig", new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FootContent{
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/matrix.js"></script>
    <script src="~/Scripts/js/jquery.ui.custom.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/js/masked.js"></script>
    <script src="~/Scripts/js/jquery.uniform.js"></script>
    <script src="~/Scripts/js/select2.min.js"></script>

    @*<script src="~/Scripts/js/matrix.form_common.js"></script>*@
    <script src="~/Scripts/js/wysihtml5-0.3.0.js"></script>
    <script src="~/Scripts/js/jquery.peity.min.js"></script>
    <script src="~/Scripts/js/bootstrap-wysihtml5.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/ueditor.all.min.js"> </script>
